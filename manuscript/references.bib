  journal = {Ecology},
  keywords = {Climate variability,Competition,Interactions,Niche,Precipitation,Temperature,Tree growth},
  number = {4},
  pages = {1003--1011},
  pmid = {27220216},
  title = {{Interspecific variation in growth responses to climate and competition of five eastern tree species}},
  volume = {97},
  year = {2016},
}

@Article{Purves2009,
