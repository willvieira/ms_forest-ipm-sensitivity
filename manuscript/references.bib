  doi = {10.1111/geb.12396},
  file = {:Users/wvieira/Documents/Mendeley Desktop/Serra-Diaz et al. - 2016 - California forests show early indications of both range shifts and local persistence under climate change.pdf:pdf},
  issn = {14668238},
  journal = {Global Ecology and Biogeography},
  keywords = {California Floristic Province,Climate change,Early indicators,Forest Inventory and Analysis,Forests,Niche overlap,Range dynamics,Range shift,Regeneration niche},
