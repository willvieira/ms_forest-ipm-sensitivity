  doi = {10.1111/ecog.00836},
  file = {:Users/wvieira/Documents/Mendeley Desktop/Ecography - 2014 - Thuiller - Does probability of occurrence relate to population dynamics.pdf:pdf},
  isbn = {1600-0587},
  issn = {09067590},
  journal = {Ecography},
  month = {dec},
  number = {12},
  pages = {1155--1166},
  pmid = {25722536},
  publisher = {Wiley-Blackwell},
  title = {{Does probability of occurrence relate to population dynamics?}},
  url = {http://dx.doi.org/10.1111/ecog.00836{\$}{\%}5C{\$}nhttp://onlinelibrary.wiley.com/store/10.1111/ecog.00836/asset/ecog836.pdf?v=1{\&}t=i3awmj5g{\&}s=73813287e28e9c869114c8118ee19d7e6b3adb62{\$}{\%}5C{\$}nhttp://onlinelibrary.wiley.com/store/10.1111/ecog.00836/asset/ecog836.pdf?v=},
