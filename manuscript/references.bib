  doi = {10.1111/j.1365-2745.2010.01751.x},
  file = {:Users/wvieira/Documents/Mendeley Desktop/Kunstler et al. - 2011 - Effects of competition on tree radial-growth vary in importance but not in intensity along climatic gradients.pdf:pdf},
  isbn = {9780412355301},
  issn = {00220477},
  journal = {Journal of Ecology},
  keywords = {Competition importance and intensity,Environmental gradients,Plant-plant interactions,Stress gradient hypothesis,Tree radial growth},
